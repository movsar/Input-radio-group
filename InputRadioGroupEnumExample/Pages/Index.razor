@using System.ComponentModel.DataAnnotations

@page "/"

<h1>Hello, world!</h1>

<EditForm Model="model">
    <InputRadioGroup class="seasons-radio" @bind-Value="model.Season"></InputRadioGroup>
</EditForm>

Selected season: @model.Season
    

    @code{
        Model model = new Model();

        class Model
        {
            public Season Season { get; set; } = Season.Autumn;
        }

        enum Season
        {
            [Display(Name = "Spring")]
            Spring,
            [Display(Name = "Summer")]
            Summer,
            [Display(Name = "Autumn")]
            Autumn,
            [Display(Name = "Winter")]
            Winter,
        }
    }
